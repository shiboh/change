<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chnMicro.MFExchange.fragment.MoneyFragment">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar_layout" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pager_tab_height"
        android:layout_below="@id/topbar"
        android:textColor="@color/text_grey_light"
        android:textSize="@dimen/text_size_medium"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/mifie_red"
        app:pstsUnderlineColor="@color/divider_color"
        app:pstsUnderlineHeight="@dimen/divider_height" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs" />

</RelativeLayout>
