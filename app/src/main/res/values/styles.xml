<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NotTranslucent">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Button"/>

        android:textColor="@color/white"
        android:textSize="@dimen/text_size_headline_sub"
        android:textStyle="bold" />

    <style name="Button.TopbarButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_btn_topbar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_headline_sub</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
